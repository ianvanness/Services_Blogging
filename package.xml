 <contents>
  <dir name="/" baseinstalldir="/">
    <dir name="Services">
      <file role="php" name="Blogging.php">
        <tasks:replace from="@package_version@" to="version" type="package-info" />
      </file>
      <dir name="Blogging">
        <file role="php" name="Blog.php"/>
        <file role="php" name="Driver.php"/>
        <file role="php" name="Exception.php"/>
        <file role="php" name="ExtendedDriver.php"/>
        <file role="php" name="MediaObject.php"/>
        <file role="php" name="MultipleBlogsInterface.php"/>
        <file role="php" name="Post.php"/>
        <file role="php" name="XmlRpc.php"/>
        <dir name="Driver">
          <file role="php" name="Blogger.php"/>
          <file role="php" name="Exception.php"/>
          <file role="php" name="LiveJournal.php">
            <tasks:replace from="@package_version@" to="version" type="package-info" />
          </file>
          <file role="php" name="MetaWeblog.php"/>
        </dir>
      </dir>
    </dir>
    <dir name="examples" baseinstalldir="Services_Blogging">
      <file role="doc" name="autodiscover.php"/>
      <file role="doc" name="blogger.cw.php"/>
      <file role="doc" name="livejournal.cw.php"/>
    </dir>
  </dir>
 </contents>

 <dependencies>
  <required>
   <php>
